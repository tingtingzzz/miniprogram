/* 水平间距 */
view {
  background-color: #f5f5f5;
}
.content-box {
  display: flex;
}
.left {
  width: 90px;
}
.left view {
  font-size: 12px;
  line-height: 60px;
  text-align: center;
  background-color: #f7f7f7;
}
.left .active {
  background-color: #fff;
  position: relative;
}
.left .active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -15px;
  width: 2px;
  height: 30px;
  background-color: #ea4350;
}
.right .title {
  font-size: 12px;
  font-weight: bold;
  text-align: center;
  margin: 6px 0;
}
.right .content {
  display: flex;
  flex-wrap: wrap;
}
.right .content .content-item {
  width: calc(100%/3);
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 12px;
  margin-bottom: 6px;
}
.right .content .content-item image {
  width: 60px;
  height: 60px;
}

